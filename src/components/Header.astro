---
import { social } from "../data/social";
const { pathname } = Astro.url;
---

<header
  class="z-50"
  x-data="{ showMenu: false }"
  x-effect="showMenu ? document.body.style.overflowY = 'hidden' : document.body.style.overflowY = 'auto'"
>
  <nav
    class="flex items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a href="/" class="-m-1.5 p-1.5">
        <span class="font-bold tracking-wide">E.SCAZZA</span>
      </a>
    </div>
    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
        @click="showMenu = true"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <a
        href="/background"
        class="text-sm font-semibold leading-6 transition-colors text-gray-900 hover:text-blue-700"
        class:list={[
          pathname?.match(/\/background/i) && "border-b-2 border-blue-700",
        ]}>Background</a
      >
      <a
        href="/contacts"
        class="text-sm font-semibold leading-6 transition-colors text-gray-900 hover:text-blue-700"
        class:list={[
          pathname?.match(/\/contacts/i) && "border-b-2 border-blue-700",
        ]}>Contacts</a
      >
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <ul
        class="flex flex-wrap justify-between items-center text-sm font-medium text-gray-500 max-w-[200px] w-full md:w-[200px]"
      >
        {
          social.map((item) => (
            <li class="hover:brightness-75 transition-all">
              <a href={item.url} target="_blank">
                <img src={item.icon} alt={item.alt} class="w-6 h-6" />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </nav>
  <!-- Mobile menu, show/hide based on menu open state. -->
  <div class="lg:hidden" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-50" x-show="showMenu"></div>
    <div
      class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10 transition-all"
      :class="showMenu ? 'opacity-100' : 'opacity-0 pointer-events-none'"
    >
      <div class="flex items-center justify-between">
        <a href="/" class="-m-1.5 p-1.5" @click="showMenu = false">
          <span class="font-bold tracking-wide">E.SCAZZA</span>
        </a>
        <button
          type="button"
          class="-m-2.5 rounded-md p-2.5 text-gray-700"
          @click="showMenu = false"
        >
          <span class="sr-only">Close menu</span>
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="mt-10 h-[90%] grid place-items-center">
        <div class="-my-6 divide-y divide-gray-500/10 w-full">
          <div class="space-y-2 py-6 text-center">
            <a
              href="/background"
              class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
              @click="showMenu = false">Background</a
            >
            <a
              href="/contacts"
              class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50"
              @click="showMenu = false">Contacts</a
            >
          </div>
          <ul
            class="flex flex-wrap justify-evenly items-center w-full max-w-[200px] mx-auto py-10"
          >
            {
              social.map((item) => (
                <li class="hover:brightness-75 transition-all">
                  <a href={item.url} target="_blank" @click="showMenu = false">
                    <img src={item.icon} alt={item.alt} class="w-6 h-6" />
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>
